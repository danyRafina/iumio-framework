    },
    "require": {
        "php": ">=7.0.0",
        "smarty/smarty": "~3.1",
        "twbs/bootstrap": "3.3.7",
        "components/font-awesome" : "~4.7.0",
        "components/jquery" : "~3.2.1",
        "phpmailer/phpmailer": "~6.0"
    },
    "scripts": {
        "post-install-cmd": "mv ./vendor/libs/twbs/bootstrap/dist/ ./web/components/libs/bootstrap && mv ./vendor/libs/components/font-awesome/ ./web/components/libs/font-awesome/ &&  mv ./vendor/libs/components/jquery/ ./web/components/libs/jquery/ &&  php ./vendor/iumio_framework/php/Core/Additional/Composer/Installer.php",
        "post-update-cmd":  "mv ./vendor/libs/twbs/bootstrap/dist/ ./web/components/libs/bootstrap && mv ./vendor/libs/components/font-awesome/ ./web/components/libs/font-awesome/ &&  mv ./vendor/libs/components/jquery/ ./web/components/libs/jquery/ &&  php ./vendor/iumio_framework/php/Core/Additional/Composer/Installer.php"
    }
}

